<?xml version="1.0" encoding="UTF-8"?>
<web-fragment xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee/web-fragment_3_0.xsd"
              id="WebAppFragment_ID" version="3.0">
    <name>Mock Framework fragment</name>

    <context-param>
        <param-name>CHARACTER_ENCODING</param-name>
        <param-value>UTF-8</param-value>
    </context-param>

    <servlet>
        <servlet-name>MockServlet</servlet-name>
        <servlet-class>com.keylane.mock.MockServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MockServlet</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>

</web-fragment>
