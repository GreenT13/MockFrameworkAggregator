<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0"
         metadata-complete="true"
         id="WebApp">
    <!-- Do not change the display name. -->
    <display-name>Mock servlet</display-name>

    <context-param>
        <param-name>CHARACTER_ENCODING</param-name>
        <param-value>UTF-8</param-value>
    </context-param>

    <servlet>
        <servlet-name>MockServlet</servlet-name>
        <servlet-class>com.keylane.mock.MockServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MockServlet</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
</web-app>
